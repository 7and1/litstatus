# Cloudflare Pages Configuration
# Copy this file to wrangler.toml and fill in your values
# wrangler.toml is git-ignored for security

# Cloudflare Account ID
# Set via environment variable: CLOUDFLARE_ACCOUNT_ID
# Or uncomment below (NOT recommended for public repos):
# account_id = "your-account-id-here"

name = "litstatus"
compatibility_date = "2024-01-01"

# Build configuration for Next.js
[build]
command = "npm run build"
cwd = ". "

# Environment variables (set in Cloudflare dashboard or GitHub Secrets)
# [vars]
# NEXT_PUBLIC_SUPABASE_URL = ""
# NEXT_PUBLIC_SUPABASE_ANON_KEY = ""

# Production environment variables
[env.production]
routes = [
  { pattern = "/*", zone_name = "litstatus.com" }
]

# Development environment
[env.development]
name = "litstatus-dev"
